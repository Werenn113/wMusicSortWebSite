{
  // https://nuxt.com/docs/guide/concepts/typescript
  "files": [],
  "references": [
    {
      "path": "./.nuxt/tsconfig.app.json"
    },
    {
      "path": "./.nuxt/tsconfig.server.json"
    },
    {
      "path": "./.nuxt/tsconfig.shared.json"
    },
    {
      "path": "./.nuxt/tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "strict": true, // Active toutes les vérifications strictes
    "noImplicitAny": true, // Interdit le type 'any' si non déclaré explicitement
    "strictNullChecks": true, // Ne permet pas que 'null' ou 'undefined' soient ignorés
    "noUnusedLocals": true, // Signale une erreur si une variable est déclarée mais pas utilisée
    "noUnusedParameters": true // Idem pour les paramètres de fonction
  }
}